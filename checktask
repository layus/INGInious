"""
    Small tool to allow verification of .task and .course files.
    Usage:
        checktask course_id/task_id
"""
import sys
from inginious.frontend.custom.courses import FrontendCourse
from inginious.frontend.custom.tasks import FrontendTask
import inginious.common.base


def usage():
    """ Usage """
    print "Usage: checktask course_id/task_id"
    exit(1)

if not len(sys.argv) == 2:
    usage()

# Read input argument
ids = sys.argv[1].split('/')
courseid = ids[0]
taskid = ids[1]

# Change default path to task Directory
inginious.common.base.INGIniousConfiguration.load("./configuration.json")
taskdir= inginious.common.base.INGIniousConfiguration['tasks_directory'] + '/' + courseid + '/' + taskid

# HTML Tidy
inginious.common.base.INGIniousConfiguration["allow_html"] = "tidy"

try:
    FrontendTask(FrontendCourse(courseid), taskid)
except Exception as inst:
    print "There was an error while validating the file:"
    print inst
    exit(1)
else:
    print "File verification succeeded"
    exit(0)
